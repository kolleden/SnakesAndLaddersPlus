<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="visible">

    <Button
        android:id="@+id/Saveplayers"
        android:layout_width="131dp"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_marginLeft="250dp"
        android:layout_marginStart="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/RedFace"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/red_dot"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/Back"
        android:layout_alignStart="@+id/Back" />

    <ImageView
        android:id="@+id/BlackFace"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/black_dot"
        android:layout_marginTop="36dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/RedFace"
        android:layout_alignStart="@+id/RedFace" />

    <EditText
        android:id="@+id/NameBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:layout_alignTop="@+id/BlackFace"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp" />

    <EditText
        android:id="@+id/passwordblack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/NameBlack"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/NameRed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/passwordred"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="0dp" />

</RelativeLayout>